;-----------------------------------------------------------
;釣った魚リストの表示
;-----------------------------------------------------------
@SHOW_COLLECTION_FISH
#DIM 選んだ魚
#DIM 全種数
#DIM 釣った種数
#DIM 釣った総数
#DIM 最大サイズ
#DIM 消去行数

VARSET LOCAL
全種数 = 0
釣った種数 = 0
釣った総数 = 0
最大サイズ = 0
消去行数 = 0

CLEARLINE 1
PRINTFORML 至今为止釣上来的魚的列表
DRAWLINE
FOR LOCAL, 1, 61
	;魚が無名でない
	IF FISH_NAME(LOCAL) != ""
		全種数 ++
		SIF LOCAL < 10
			PRINTFORM  
		IF FISH_EXP:(LOCAL)
			釣った種数 ++
			PRINTFORM [{LOCAL}] %FISH_NAME(LOCAL), 18, LEFT%
			SETCOLOR C_L_GRAY
			PRINTFORM （釣魚総数：
			SELECTCASE FISH_EXP:LOCAL
				CASE IS < 10
					PRINTFORM     
				CASE IS < 100
					PRINTFORM    
				CASE IS < 1000
					PRINTFORM   
				CASE IS < 10000
					PRINTFORM  
			ENDSELECT
			釣った総数 += FISH_EXP:LOCAL
			PRINTFORM {FISH_EXP:LOCAL}条／最大尺寸：
			SELECTCASE FISHSIZE_RECORD:LOCAL
				CASE IS < 10
					PRINTFORM   
				CASE IS < 100
					PRINTFORM  
			ENDSELECT
			PRINTFORML {FISHSIZE_RECORD:LOCAL}cm ）
			SIF FISHSIZE_RECORD:LOCAL > 最大サイズ
				最大サイズ = FISHSIZE_RECORD:LOCAL
		ELSE
			PRINTFORML [{LOCAL}] ????????????
		ENDIF
	ENDIF
	RESETCOLOR
NEXT
SETCOLOR 0x00FF00
PRINTFORM 釣魚種類：{釣った種数}／{全種数}
IF 釣った総数
	PRINTFORML 　釣魚総数：{釣った総数}条　至今为止釣上来的魚的最大尺寸：{最大サイズ}cm
ELSE
	PRINTL 
ENDIF
RESETCOLOR
DRAWLINE
PRINT [0] - 返回

$LOOP
INPUT

選んだ魚 = RESULT
SELECTCASE 選んだ魚
	CASE 1 TO 60
		IF FISH_NAME(選んだ魚) != ""
			CLEARLINE 1
			CALL PRINT_FISHINFO(選んだ魚)
			IF FISH_EXP:選んだ魚
				消去行数 = 8
			ELSE
				消去行数 = 2
			ENDIF
			CLEARLINE 消去行数
			GOTO LOOP
		ELSE
			CLEARLINE 1
			GOTO LOOP
		ENDIF
	CASE 0
		RETURN
	CASEELSE
		CLEARLINE 1
		GOTO LOOP
ENDSELECT

;-----------------------------------------------------------
;選択した魚の説明／ヒント表記
;ARG …選んだ魚番号
;-----------------------------------------------------------
@PRINT_FISHINFO(ARG)

DRAWLINE
IF FISH_EXP:ARG
	PRINTPLAINFORM [{ARG}] %FISH_NAME(ARG)%
	PRINTFORML （釣魚数：{FISH_EXP:ARG}条／最大尺寸：{FISHSIZE_RECORD:ARG}cm ）
	IF ABL:MASTER:教養 < 3
		CALL COLORMESSAGE(@"　　（提升教養的Lv的话、可以获得分布域・釣期的信息…）",C_L_GRAY,1)
	ELSE
		CALL FISHING_HINT(ARG)
	ENDIF
	CALL FISHING_EXPLANATION(ARG)
ELSE
	PRINTPLAINFORM [{ARG}] ?????????????
	CALL FISHING_HINT(ARG)
ENDIF
WAIT

