	SIF DISHASSI == TARGET
		RETURN 0
	SIF CFLAG:TARGET:同行
		RETURN 0
	SIF DISH_DRAG()
		RETURN 0
	LOCAL:1 = 0
	IF DISHTYPE == 3
		SIF TIME_PROGRESS(TCVAR:甜点空腹時刻)
