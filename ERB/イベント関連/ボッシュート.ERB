			CALL MESSAGE_REACTION_TASTE
		CALL KOJO_MESSAGE_SEND("EVENT",14,TARGET,-1,-1)
		CALL 吃飯(TARGET)
		CALL RESET_DISH
	ENDIF
ENDIF

