	;仕込みは手伝える
	IF BASE:ARG:工作量 > 3000
		TCVAR:ARG:没办法帮忙 = 0
	;屋台を出したら手伝っても時間は変わらない
	ELSE
		TCVAR:ARG:没办法帮忙 = 2
	ENDIF
CASE [[文]]
	;教養と信頼が必要
	IF CFLAG:ARG:信頼度 < 500 || ABL:MASTER:教養 < 3
		TCVAR:ARG:没办法帮忙 = 1
	ELSE
		TCVAR:ARG:没办法帮忙 = 0
	ENDIF
CASE [[華扇]]
	IF YOUBI_MATCH(DAY, "土")
		IF TIME >= CLOCK_TO_TIME(14, 0)
			CFLAG:ARG:職場 = 212
			CFLAG:ARG:職種 = 41
		ELSE
			CFLAG:ARG:職場 = 218
			CFLAG:ARG:職種 = 41
		ENDIF
	ENDIF
CASE [[艾倫]]
	IF TIME:0 == TCVAR:ARG:357
	;前回の処理から時間が経過してなければスルー
	ELSEIF GROUPMATCH(DAY:3, 15, 30)
	;出張
		;客数の増減、計上、基本は－３～＋５
		LOCAL:1 = RAND:8 - 3
		
		;天候
		SELECTCASE TIME:5
		;霧雨、霧は－１
		CASE 6, 7
			LOCAL:1 -= 1
		;雨、雪は－２
		CASE 4, 8
			LOCAL:1 -= 2
		;大雨、吹雪、みぞれ、あられは－３
		CASE 5, 9, 12, 13
			LOCAL:1 -= 3
		ENDSELECT
		;虹、ダイヤモンドダストは＋２
		SIF TIME:7 >= 1
			LOCAL:1 += 2
		
		;客数が少ないならより増やす
		SIF TCVAR:ARG:354 < 5
			LOCAL:1 += 1
		;客数が多いならより減らす
		SIF TCVAR:ARG:354 > 25
			LOCAL:1 -= 3
		
		;負数防止
		TCVAR:ARG:354 = MAX(0, TCVAR:ARG:354 + LOCAL:1)
		SIF LOCAL:1 > 0
			TCVAR:ARG:355 += LOCAL:1
		;現在の客数が一定以上だとエレンのサポに回る
		IF TCVAR:ARG:354 > 25
			CFLAG:ARG:職種 = 43
		;そうでなければ呼び込みに
		ELSE
			CFLAG:ARG:職種 = 41
		ENDIF
	;採集　エレンの採集量を計上
	ELSE
		;採集量がおかしくならないように
		SIF !INRANGE(TCVAR:ARG:357, 420, 720)
			TCVAR:ARG:357 = 420
		;計算式は(現在のTIME-前回計算したTIME)*1～20の乱数
		TCVAR:ARG:354 += (TIME:0 - TCVAR:ARG:357) * (RAND:20 + 1)
		;採集量が最大仕事量を上回ったら終了
		SIF TCVAR:ARG:354 > MAXBASE:ARG:工作量
			BASE:ARG:工作量 = 1
	ENDIF
CASE [[慧音]]
	;授業が終われば後片付けを手伝える
	IF TIME >= CLOCK_TO_TIME(14, 0)
		CFLAG:ARG:職種 = 40
		TCVAR:ARG:没办法帮忙 = 0
	;昼休みは当然無理
	ELSEIF INRANGE(TIME, CLOCK_TO_TIME(12, 0), CLOCK_TO_TIME(12, 59))
		TCVAR:ARG:没办法帮忙 = 1
	;教養が3以上かつ信頼度が50以上なら授業を手伝える
	ELSEIF ABL:MASTER:教養 >= 3 && CFLAG:ARG:信頼度 >= 50
		TCVAR:ARG:没办法帮忙 = 2
	;それ以外は手伝えない
	ELSE
		TCVAR:ARG:没办法帮忙 = 1
	ENDIF
ENDSELECT

