	IF TIME >= CLOCK_TO_TIME(12, 0)
		TCVAR:ARG:没办法帮忙 = 0
	;公演日で無いなら手伝える
	ELSEIF DAY % 14 > 0
		TCVAR:ARG:没办法帮忙 = 0
	;公演中は手伝えない
	ELSE
		TCVAR:ARG:没办法帮忙 = 1
	ENDIF
CASE [[夢子]]
	CFLAG:ARG:職種 = 40
	;屋敷中のお掃除 汚れている部分から4か所順次移動
	;今一番汚れているところから4つを探す　洋館前～人形の館全域
	;一律掃除時間は1時間とする
	IF TIME <= CLOCK_TO_TIME(8, 0)
		お掃除 = FINDELEMENT( YOGORE, MAXARRAY(YOGORE,520, 531), 520, 531)
		CFLAG:ARG:職場 = お掃除
