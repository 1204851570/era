
@GETMAP2(ARG)
#DIM 气息
气息 = 0
IF TALENT:MASTER:居場所察知
	FOR LOCAL, 1, CHARANUM
		IF CFLAG:LOCAL:現在位置 == (ARG * 10) + (CFLAG:MASTER:约会中 * 100)
			IF CFLAG:LOCAL:行動 == 5
				气息 = 2
				BREAK
			ENDIF
			气息 = 1
		ENDIF
	NEXT
	IF 气息 == 1
		SETCOLOR 255, 100, 200
	ELSEIF 气息 == 2
		SETCOLOR 255, 100, 0
	ENDIF
ENDIF
SIF CFLAG:MASTER:現在位置 == (ARG * 10) + (CFLAG:MASTER:约会中 * 100)
	SETCOLOR 0 , 255, 0
IF ARG == 68
	SETCOLOR 75 , 35, 90
	PRINTBUTTON "森", 650
ELSEIF ARG == 67
	SETCOLOR 100 , 255, 255
	PRINTBUTTON "◇", 640
ELSE
	PRINTBUTTON (TOFULL(TOSTR(ARG))), ARG
ENDIF
RESETCOLOR
