@GETMAP_4(ARG)
#DIM 气息
气息 = 0
IF TALENT:MASTER:居場所察知 && FLAG:察知模式 == 1
	FOR LOCAL, 1, CHARANUM
		IF CFLAG:LOCAL:現在位置 == ARG
			IF CFLAG:LOCAL:行動 == 5
				气息 = 2
				BREAK
			ELSEIF CFLAG:LOCAL:睡眠
				气息 = 3
				BREAK
			ENDIF
			气息 = 1
		ENDIF
	NEXT
	IF 气息 == 1
		SETCOLOR 255, 100, 200
	ELSEIF 气息 == 2
		SETCOLOR 255, 100, 0
	ELSEIF 气息 == 3
		SETCOLOR 0, 120, 180
	ENDIF
ENDIF
CALL GETMAP_YOGORE(ARG)
