	SELECTCASE ARG
		CASE 401 TO (MAXROOM - 1)
			RETURNF STR:(ARG + 8000)
		CASE 498
			RETURNF OMANEKI_PLACE()
		CASE 499
			RETURNF "隙間空間"
		CASE MAXROOM
			RETURNF "竹林之外"
		CASEELSE
			RETURNF "不明"
	ENDSELECT
ELSE
	RETURNF "不明"
ENDIF

