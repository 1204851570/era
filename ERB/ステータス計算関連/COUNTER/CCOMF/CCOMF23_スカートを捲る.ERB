;*********************************************************************************************
;カウンターコマンド：体を摺り寄せる
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF23(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース計算および内部処理系統
	;=============================
	CALLF ONCE("裙子めくられ",0,ARG)
	SOURCE:ARG:侮辱 += 300
	SOURCE:ARG:挑発 += 200

	;マスターカウンター制御
	;=============================
	;なし

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE23(ARG)

	;服装制限
	SIF !(EQUIP:PLAYER:裙子 || EQUIP:PLAYER:連衣裙 || EQUIP:PLAYER:和服)
	RETURN 0
	SIF TEQUIP:PLAYER:0 > 3
		RETURN 0
	SIF !EQUIP:PLAYER:0
		RETURN 0
	SIF !ONCE("裙子めくられ",1,ARG)
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER23(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS counterタイプ

	;カウンタータイプ設定
	;=============================
	counterタイプ = ソフト

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + CFLAG:ARG:積極性 + CFLAG:ARG:品质 - CFLAG:ARG:害羞

	;カウンタータイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL *= COUNTER_TYPE(counterタイプ, ARG)

RETURN LOCAL
