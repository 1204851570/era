;*********************************************************************************************
;カウンターコマンド：首筋舐め
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF129(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)
	
	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:征服 += 40
	SOURCE:ARG:挑発 += 80
	SOURCE:ARG:侮辱 += 80

	;マスターカウンター制御
	;(ビット立ちで不可 0=尻を撫でる 1=抱き付く 2=キスする 3=胸愛撫 4=アナル愛撫 5=クリ愛撫 6=指挿入れ 7=スカートめくり)
	;=============================
	SETBIT TCVAR:ARG:26 ,0
	SETBIT TCVAR:ARG:26 ,2
	SETBIT TCVAR:ARG:26 ,3
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,5
	SETBIT TCVAR:ARG:26 ,6
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE129(ARG)

	RETURN BASE:ARG:理性 <= 800

RETURN 0

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER129(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS counterタイプ

	;カウンタータイプ設定
	;=============================
	counterタイプ = 抱きつき

	;実行判定値算出式
	;=============================
	LOCAL = (基本値*3/10) + CFLAG:ARG:品质 + CFLAG:ARG:害羞 + GETPALAMLV(PALAM:ARG:欲情, 7)
	
	;カウンタータイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(counterタイプ, ARG)

RETURN LOCAL
