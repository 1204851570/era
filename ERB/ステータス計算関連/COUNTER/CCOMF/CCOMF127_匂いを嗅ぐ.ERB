;*********************************************************************************************
;カウンターコマンド：匂いを嗅ぐ
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF127(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)
	
	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:情愛 += 100
	SOURCE:ARG:挑発 += 50
	SOURCE:ARG:侮辱 += 80

	;マスターカウンター制御
	;(ビット立ちで不可 0=尻を撫でる 1=抱き付く 2=キスする 3=胸愛撫 4=アナル愛撫 5=クリ愛撫 6=指挿入れ 7=スカートめくり)
	;=============================
	SETBIT TCVAR:ARG:26 ,0
	SETBIT TCVAR:ARG:26 ,1
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,6
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE127(ARG)

	;犬耳・猫耳キャラ限定
	RETURN GROUPMATCH(TALENT:ARG:動物耳, 2, 4)

RETURN 0

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER127(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS counterタイプ

	;カウンタータイプ設定
	;=============================
	counterタイプ = 抱きつき

	;実行判定値算出式
	;=============================
	LOCAL = (基本値*9/10) + CFLAG:ARG:害羞
	
	;カウンタータイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(counterタイプ, ARG)

RETURN LOCAL
