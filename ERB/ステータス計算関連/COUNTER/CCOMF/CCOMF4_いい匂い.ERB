;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER4(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS counterタイプ

	;カウンタータイプ設定
	;=============================
	counterタイプ = コミュ

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + CFLAG:ARG:誘惑 + CFLAG:ARG:積極性

	;カウンタータイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL *= COUNTER_TYPE(counterタイプ, ARG)

RETURN LOCAL
