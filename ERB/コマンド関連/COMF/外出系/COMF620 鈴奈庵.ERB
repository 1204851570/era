	PRINTL 「不能同时借二冊以上」
	RETURN -1
ELSEIF RESULT == 100
	IF !CHARISMA
		PRINTFORMW 「籌碼付款？？？？」
		PRINTFORMW 「嗯……那么就10个籌碼？可以么……」
		IF MONEY:2 < 10
			PRINTFORMW 籌碼不足
			GOTO C_LOOP
		ENDIF
	ELSE
		PRINTFORMW 「啊、我用钱支付吧」
	ENDIF
	PRINTFORML 
	CHARISMA = !CHARISMA
	GOTO C_LOOP
ELSE
	IF INRANGE(RESULT, 1, 9)
		IF GETBIT (FLAG:1011,RESULT)
			PRINTL 「正在外借中呢」
		ELSE
			SETBIT FLAG:1011,RESULT
			IF !CHARISMA
				MONEY -= 3000
			ELSE
				MONEY:2 -= 10
			ENDIF
			ITEM:(100 + RESULT) = 1
			FLAG:借书返还期限 = 8
			TFLAG:193 = 1
			PRINTFORML 借走了%ITEMNAME:(100 + RESULT)%
			RETURN 1
		ENDIF
	ELSEIF RESULT == 0
		RETURN -1
	ELSE
		GOTO LOOP
	ENDIF
ENDIF
