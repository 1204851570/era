;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K26_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW “生活这美丽而残酷的大地上！”
		ELSEIF RAND:4 == 0
			PRINTFORMW “可惜我的弹幕比蜘蛛丝还细，比蜘蛛网还复杂。”
		ELSEIF RAND:3 == 0
			PRINTFORMW “能打破我的结界吗？”
		ELSEIF RAND:2 == 0
			PRINTFORMW “给你烙一针吧。”
		ELSE
			PRINTFORMW “不自量力，要知道蛮勇可不是勇敢。”
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW “疏忽大意了吗……”
				ELSEIF RAND:4 == 0
					PRINTFORMW “我的结界可不是一两个啊”
				ELSEIF RAND:3 == 0
					PRINTFORMW “哎呀？猜中了吗？
				ELSEIF RAND:2 == 0
					PRINTFORMW “…碰到什么了？”
				ELSE
					PRINTFORMW “讨厌，衣服会破的。”
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW “这个！”
				ELSEIF RAND:4 == 0
					PRINTFORMW “嗯，现在的情况不太好啊。”
				ELSEIF RAND:3 == 0
					PRINTFORMW “你可真能干啊，%CALLNAME:MASTER%”
				ELSEIF RAND:2 == 0
					PRINTFORMW “…从我的眼中逃脱是不可能的！”
				ELSE
					PRINTFORMW “弹幕的间隙什么时候能穿过呢？”
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW “…这样下去不妙啊”
				ELSEIF RAND:4 == 0
					PRINTFORMW “蓝和橙都去哪里了？”
				ELSEIF RAND:3 == 0
					PRINTFORMW “被逼得走投无路的狐狸，我”
				ELSEIF RAND:2 == 0
					PRINTFORMW “我会让你知道什么是苦肉计”
				ELSE
					PRINTFORMW “能把我逼到这种地步，值得表扬”
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW “……”
				ELSEIF RAND:4 == 0
					PRINTFORMW “我没想到会这样……”
				ELSEIF RAND:3 == 0
					PRINTFORMW “跨越了人与妖的境界线”
				ELSEIF RAND:2 == 0
					PRINTFORMW “哎呀？我输了”
				ELSE
					PRINTFORMW “…能让运气上升的颜色是什么呢？”
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		IF RAND:4 == 0
			PRINTFORMW “梦想封印 瞬，好怀念啊。”
		ELSEIF RAND:3 == 0
			PRINTFORMW “大意了？再好好看着我啊……”
		ELSEIF RAND:2 == 0
			PRINTFORMW “这种时候不可麻痹大意”
		ELSE
			PRINTFORMW “反击就是这样的”
		ENDIF
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		IF RAND:4 == 0
			PRINTFORMW “柔能克刚吗？”
		ELSEIF RAND:3 == 0
			PRINTFORMW “可惜，没有效果。”
		ELSEIF RAND:2 == 0
			PRINTFORMW “虽不中亦不远矣，那么就是‘不太行’吧”
		ELSE
			PRINTFORMW “这种程度的话是不会打中的”
		ENDIF
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW “升上天界的猴子，对被赋予的职务愤怒而叛逆，最后被困在山里。”
				ELSEIF RAND:4 == 0
					PRINTFORMW “呀，%CALLNAME:MASTER%的完全败北了。”
				ELSEIF RAND:3 == 0
					PRINTFORMW “射击、斩、冲、射、杀……拿什么都对我没用”
				ELSEIF RAND:2 == 0
					PRINTFORMW “就算时间停止了也覆水难收，你还会在盆里放水吗？”
				ELSE
					PRINTFORMW “只告诉你一个人吧，我的弱点是……什么都没有”
				ENDIF
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW “把你斩成八瓣好吗？还是做成金枪鱼那样？”
				ELSEIF RAND:4 == 0
					PRINTFORMW “幻想乡接受一切，非常残酷的事。”
				ELSEIF RAND:3 == 0
					PRINTFORMW “射击、斩、冲、射、杀……拿什么都对我没用”
				ELSEIF RAND:2 == 0
					PRINTFORMW “只可惜我也并不温柔。”
				ELSE
					PRINTFORMW “和西洋蒲公英陷入苦战吧”
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW “因为这个，很麻烦吧。”
				ELSEIF RAND:4 == 0
					PRINTFORMW “你……感觉很痛吧”
				ELSEIF RAND:3 == 0
					PRINTFORMW “怎么样？已经习惯了吗？”
				ELSEIF RAND:2 == 0
					PRINTFORMW “虽说是势均力敌，可我还是更有优势呢”
				ELSE
					PRINTFORMW “如果是蓝的话，也许能赢。”
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW “讨厌纠缠不休的男人”
				ELSEIF RAND:4 == 0
					PRINTFORMW “挺有才能啊，%CALLNAME:MASTER%”
				ELSEIF RAND:3 == 0
					PRINTFORMW “是强敌呢，%CALLNAME:MASTER%”
				ELSEIF RAND:2 == 0
					PRINTFORMW “怎么样？不试着去解决异变吗？”
				ELSE
					PRINTFORMW “一纸之隔，可是比三途之川还要广阔。”
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW “…完全，让我到了这种地步…！”
				ELSEIF RAND:4 == 0
					PRINTFORMW “竟然打败了我，真有实力啊。”
				ELSEIF RAND:3 == 0
					PRINTFORMW “这样的话可能比灵梦更强吧。”
				ELSEIF RAND:2 == 0
					PRINTFORMW “是不是和蓝橙一起战斗比较好呢？”
				ELSE
					PRINTFORMW “还会再来战斗吗？”
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

