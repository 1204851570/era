;リストを利用した宴会キャラのプリセット関数
@ENKAI_ENTRY_CHARALIST(HOST_LIST, GUEST_LIST, NG_LIST)
#DIM REF HOST_LIST  ;主催者参加
#DIM REF GUEST_LIST ;客参加
#DIM REF NG_LIST    ;来ない
#DIM L_NUM
#DIM L_ID
L_NUM = FINDELEMENT(HOST_LIST, 0)
IF L_NUM >= 1
	FOR L_ID, 0, L_NUM
		CFLAG:(HOST_LIST:L_ID):宴会参加 = 2
	NEXT
ENDIF
L_NUM = FINDELEMENT(GUEST_LIST, 0)
IF L_NUM >= 1
	FOR L_ID, 0, L_NUM
		CFLAG:(GUEST_LIST:L_ID):宴会参加 = 1
	NEXT
ENDIF
;設定したことを明確化するために-1にします
L_NUM = FINDELEMENT(NG_LIST, 0)
IF L_NUM >= 1
	FOR L_ID, 0, L_NUM
		CFLAG:(NG_LIST:L_ID):宴会参加 = -1
	NEXT
ENDIF



@ENKAI_WORK(ARG)
;宴会の行動内容を入力する
;NOSAMES:すべての引数が異なると1, 1つでも一致していると0を返す
IF FLAG:宴会開催FLAG > 0 && (NOSAMES(CFLAG:ARG:職種, 48, 49, 50, 51) || CFLAG:ARG:行動 == 0)
	;宴会の時間になったら準備仕事の量に応じて主催者が動き始める
	IF TIME >= FLAG:開始時間 - (FLAG:宴会規模 / 30) - 15 && TIME < FLAG:33 && CFLAG:ARG:宴会参加 == 2
		CALL ENKAI_PREPARE(ARG)
		RETURN 1
	;遊びに来るだけの奴は時間になったら遊びに来る
	ELSEIF DAY == FLAG:34 && TIME >= FLAG:33 && CFLAG:ARG:同行 == 0
		CALL ENKAI_START(ARG)
		RETURN 1
	;とっくに始まってる場合
	ELSEIF FLAG:宴会開催FLAG >= 98 && CFLAG:ARG:同行 == 0
		CALL ENKAI_START(ARG)
		RETURN 1
	ENDIF
ELSEIF FLAG:宴会開催FLAG > 0
	RETURN 1
ENDIF
RETURN 0


@ENKAI_PREPARE(ARG)
;主催者の準備仕事
IF CFLAG:ARG:職種 != 宴会準備
	MAXBASE:ARG:工作量 = FLAG:31 / 3
	;最大値、2400
	SIF MAXBASE:ARG:工作量 >= 2400
		MAXBASE:ARG:工作量 = 2400
	BASE:ARG:工作量 = MAXBASE:ARG:工作量
	CFLAG:ARG:職種 = 宴会準備
	CFLAG:ARG:職場 = TFLAG:宴会場
	TCVAR:ARG:315 = 0
	CFLAG:ARG:行動 = 5
ENDIF
RETURN 1

@ENKAI_START(ARG)
;それぞれが飲むペースを変えるので、宴の規模に応じて仕事量が変化
IF CFLAG:ARG:職種 != ENKAI_SANKA && TCVAR:ARG:烂醉 == 0
	MAXBASE:ARG:工作量 = FLAG:31
	;最大値、通常7200(半日)・酒呑み神なら制限なし
	SIF MAXBASE:ARG:工作量 >= 7200 && TALENT:ARG:酒耐性 != 3
		MAXBASE:ARG:工作量 = 7200
	MAXBASE:ARG:工作量 += RAND:500
	IF TALENT:ARG:酒耐性 == -1
		TIMES MAXBASE:ARG:工作量, 0.75
	ELSEIF TALENT:ARG:酒耐性 == 1
		TIMES MAXBASE:ARG:工作量, 1.25
	ELSEIF TALENT:ARG:酒耐性 == 2
		TIMES MAXBASE:ARG:工作量, 1.5
	ELSEIF TALENT:ARG:酒耐性 == 3
		TIMES MAXBASE:ARG:工作量, 2.0
	ENDIF
	BASE:ARG:工作量 = MAXBASE:ARG:工作量
	;仕事内容・宴会に参加
	CFLAG:ARG:職種 = ENKAI_SANKA
	CFLAG:ARG:職場 = TFLAG:宴会場
	CFLAG:ARG:現在位置 = TFLAG:宴会場
	TCVAR:ARG:315 = 0
	CFLAG:ARG:行動 = 5
	IF CFLAG:ARG:宴会参加 == 2
		;主催者は片付け予定をセット(仕事量は最大1200)
		CFLAG:ARG:片付け工作量 = MIN(FLAG:宴会規模 / 6, 1200)
		CFLAG:ARG:片付け場所 = FLAG:宴会会場
	ENDIF
ENDIF

RETURN 1


