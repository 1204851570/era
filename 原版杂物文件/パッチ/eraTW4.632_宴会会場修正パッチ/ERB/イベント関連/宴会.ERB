		CALL ENKAI_ENTRY_CHARALIST(HOST_LIST, GUEST_LIST, NG_LIST)
		IF FLAG:31 >= 2500
		;規模が大きいと参加確率大
			FOR LOCAL, 1, CHARANUM
				IF CFLAG:LOCAL:宴会参加
					SIF CFLAG:LOCAL:宴会参加 < 0
						CFLAG:LOCAL:宴会参加 = 0
					CONTINUE
				ENDIF
				;霧の湖方面に住んでると確率が上がる
				SIF CFLAG:LOCAL:自宅位置 / 100 == 3 && !RAND:3
					CFLAG:LOCAL:宴会参加 = 1
				;他のキャラはランダム参加
				SIF RAND:7 == 0
					CFLAG:LOCAL:宴会参加 = 1
			NEXT
		ELSE
			FOR LOCAL, 1, CHARANUM
				IF CFLAG:LOCAL:宴会参加
					SIF CFLAG:LOCAL:宴会参加 < 0
						CFLAG:LOCAL:宴会参加 = 0
					CONTINUE
