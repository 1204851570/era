			SIF RAND:5 == 0
				CFLAG:LOCAL:宴会参加 = 1
		NEXT
	;1 霊夢の気紛れ酒盛り
	CASE 1
		SELECTCASE FLAG:宴会差し入れ
			CASE 51
				FLAG:31 += RAND:1000
			CASE 52
				FLAG:31 += RAND:2000
		ENDSELECT
		;1:霊夢, 2:るーこと, 11:魔理沙
		HOST_LIST  = 1, 2, 11
		;10:萃香
		GUEST_LIST = 10
