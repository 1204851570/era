;今日のパンツに合わせた文胸を選ぶ
;上半身下着を上書きしちゃうのは色々問題ありそう
;手抜き、加筆して
@今日の文胸(ARG)
SELECTCASE CFLAG:ARG:きょうのぱんつ
	;ノーパン
	CASE 0
		;ノーブラ
		EQUIP:ARG:上半身下着１ = 0
	;トランクス
	CASE 1
		;Ｔシャツ
		EQUIP:ARG:上半身下着１ = 10
	;ドロワーズ
	;くまさんパンツ
	;フリルパンツ
	CASE 2, 3, 6
		;キャミソール
		EQUIP:ARG:上半身下着１ = 4
	;水玉パンツ
	;しましまパンツ
	CASE 4, 5
		;スポーツブラ
		EQUIP:ARG:上半身下着１ = 3
	;無地のパンツ
	;ローレグパンツ
	CASE 7, 10
		IF TALENT:ARG:幼稚 || TALENT:ARG:幼児／幼児退行
			;キャミソール
			EQUIP:ARG:上半身下着１ = 4
		ELSEIF TALENT:ARG:体型 < 0 || TALENT:ARG:無知
			;スポーツブラ
			EQUIP:ARG:上半身下着１ = 3
		ELSE
			;ブラジャー
			EQUIP:ARG:上半身下着１ = 1
		ENDIF
	;ローライズ
	;ハイレグ
	;ショーツ
	;スキャンティ
	CASE 11, 12, 19, 20
		;ブラジャー
		EQUIP:ARG:上半身下着１ = 1
	;レースのパンティ（白）
	CASE 13
		;レースのブラ（白）
		EQUIP:ARG:上半身下着１ = 11
	;レースのパンティ（黒）
	CASE 14
		;レースのブラ（黒）
		EQUIP:ARG:上半身下着１ = 12
	;Ｔバック
	;紐パン
	CASE 15 ,16
		EQUIP:ARG:上半身下着１ = 1
	;レザーパンツ
	CASE 17
		;ベルトブラ
		EQUIP:ARG:上半身下着１ = 9
	;虎柄のパンツ
	CASE 18
		;虎柄のブラ
		EQUIP:ARG:上半身下着１ = 13
	;ふんどし
	CASE 21
		;サラシ
		EQUIP:ARG:上半身下着１ = 2
	;Gストリングス
	CASE 22
		;ブラジャー
		EQUIP:ARG:上半身下着１ = 1
	;シースルーショーツ
	CASE 23
		;シースルーブラ
		EQUIP:ARG:上半身下着１ = 14
	;オープンショーツ
	CASE 24
		;トップレスブラ
		EQUIP:ARG:上半身下着１ = 15
	;ばんそうこう
	CASE 25
		;ばんそうこう
		EQUIP:ARG:上半身下着１ = 16
	;ドロワーズ（股開き）
	CASE 26
		;キャミソール
		EQUIP:ARG:上半身下着１ = 4
	;貞操帯
	CASE 27
		;貞操帯ブラ
		EQUIP:ARG:上半身下着１ = 17
	;触手下着
	CASE 28
		;触手ブラ
		EQUIP:ARG:上半身下着１ = 18
	;バイブパンツ
	;ニ穴バイブパンツ
	CASE 29, 30
		;ブラジャー
		EQUIP:ARG:上半身下着１ = 1
	;ビキニボトム
	CASE 31
		;ビキニトップ
		EQUIP:ARG:上半身下着１ = 19
	;マイクロボトム
	CASE 32
		;マイクロトップ
		EQUIP:ARG:上半身下着１ = 20
ENDSELECT

;#;PRINTFORML %CALLNAME:ARG%:下半身下着２:{CFLAG:ARG:きょうのぱんつ}:%PANTSNAME(CFLAG:ARG:きょうのぱんつ)%　上半身下着１:{EQUIP:ARG:上半身下着１}:%CLOTHNAME(7, EQUIP:ARG:7)%