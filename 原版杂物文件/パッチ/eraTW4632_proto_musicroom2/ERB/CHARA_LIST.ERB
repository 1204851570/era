;キャラ好感度カウント関数
;キャラリスト準拠で好感度がBORDER以上のキャラをカウントする
@CHARA_CNT_FAVOR(C_LIST, L_NUM, BORDER)
#FUNCTION
#DIM REF     C_LIST
#DIM         L_NUM
#DIM         BORDER
#DIM         L_ID
#DIM DYNAMIC L_CNT
FOR L_ID, 0, L_NUM
	SIF CFLAG:(C_LIST:L_ID):好感度 >= BORDER
		L_CNT ++
NEXT
RETURNF L_CNT


;キャラ好感度カウント関数
;キャラリスト準拠で面識のあるキャラをカウントする
@CHARA_CNT_KNOWN(C_LIST, L_NUM)
#FUNCTION
#DIM REF     C_LIST
#DIM         L_NUM
#DIM         L_ID
#DIM DYNAMIC L_CNT
FOR L_ID, 0, L_NUM
	SIF CFLAG:(C_LIST:L_ID):面識 >= 1
		L_CNT ++
NEXT
RETURNF L_CNT

;陥落系カウント処理関数
;セフレ、思慕、恋慕、愛欲のいずれか一つでも該当するキャラをカウント
@CHARA_CNT_ALL_FALLEN(C_LIST, L_NUM)
#FUNCTION
#DIM REF     C_LIST
#DIM         L_NUM
#DIM         L_ID
#DIM DYNAMIC L_CNT
FOR L_ID, 0, L_NUM
	SIF (TALENT:(C_LIST:L_ID):炮友 || TALENT:(C_LIST:L_ID):愛欲 || TALENT:(C_LIST:L_ID):思慕 || TALENT:(C_LIST:L_ID):恋慕)
		L_CNT ++
NEXT
RETURNF L_CNT

