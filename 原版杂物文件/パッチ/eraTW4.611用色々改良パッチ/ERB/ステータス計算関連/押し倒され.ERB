@被逆推
#DIM 人の气息
#DIM 被逆推判定
#DIM 抱きつき値
#DIM 被逆推値
#DIM 抱きつき優先

;MASTERの位置から見て他の部屋にだれかいるかどうか
人の气息 = 0
FOR LOCAL,1,CHARANUM
	SIF CFLAG:LOCAL:現在位置 == CFLAG:MASTER:現在位置
		CONTINUE
	SIF CAN_MOVE(CFLAG:MASTER:現在位置, CFLAG:LOCAL:現在位置) & 2
		人の气息 ++
	;公共の場
	SIF ROOMDATA:(CFLAG:MASTER:現在位置 % 100) & 場所_公共の場
		人の气息 ++
NEXT

IF FLAG:推倒
	被逆推判定 = 0
	被逆推判定 += ABL:TARGET:戦闘能力 - ABL:MASTER:戦闘能力
	被逆推判定 += TALENT:TARGET:体型 - TALENT:MASTER:体型
	IF CFLAG:TARGET:害羞 > 0
		被逆推判定 += 1
	ELSEIF CFLAG:TARGET:害羞 < 0
		被逆推判定 -= 1
	ENDIF
	IF CFLAG:TARGET:誘惑 > 0
		被逆推判定 += 1
	ELSEIF CFLAG:TARGET:誘惑 < 0
		被逆推判定 -= 1
	ENDIF
	IF CFLAG:TARGET:積極性 > 0
		被逆推判定 += 1
	ELSEIF CFLAG:TARGET:積極性 < 0
		被逆推判定 -= 1
	ENDIF
	IF CFLAG:TARGET:品质 > 0
		被逆推判定 += 1
	ELSEIF CFLAG:TARGET:品质 < 0
		被逆推判定 -= 1
	ENDIF
	IF GROUPMATCH(CFLAG:TARGET:性格傾向,1,3)
		被逆推判定 += 1
	ELSEIF GROUPMATCH(CFLAG:TARGET:性格傾向,2,4)
		被逆推判定 -= 1
	ENDIF
	;押し倒され判定 += ABL:TARGET:サドっ気 + ABL:MASTER:マゾっ気
	;押し倒され判定 -= TALENT:MASTER:度胸 + TALENT:MASTER:態度 + TALENT:MASTER:応答 + TALENT:MASTER:プライド + TALENT:MASTER:一線越えない + TALENT:MASTER:抵抗 + TALENT:MASTER:貞操
	;押し倒され判定 += (CFLAG:TARGET:弱み握り * 2) + (TALENT:TARGET:サド * 3) + (TALENT:MASTER:マゾ * 3) + (TCVAR:TARGET:発情 * 3)
	IF CFLAG:TARGET:积攒度 < 600
		被逆推判定 = 0
	ELSEIF CFLAG:TARGET:积攒度 < 800
		被逆推判定 += 1
	ELSEIF CFLAG:TARGET:积攒度 < 1000
		被逆推判定 += 2
	ELSE
		被逆推判定 += 3
	ENDIF
ENDIF

IF CFLAG:诶嘿嘿 == 1
	TFLAG:102 = 2
ELSEIF CFLAG:诶嘿嘿 == 2
	TFLAG:102 = 3
ELSEIF TFLAG:102 == 3 && CFLAG:MASTER:诶嘿嘿 == 2
	;既に処理済みなのでスキップ
ELSE
	TFLAG:102 = 1
ENDIF

IF !(TFLAG:102 == 3 && CFLAG:MASTER:诶嘿嘿 == 2)
	TFLAG:抱住模式 = 0
ENDIF

;抱きつきor押し倒されの処理
;デート中は発生しない
IF !CHK_DATENOW(CFLAG:TARGET:约会中)
	;抱きつきと押し倒され、どちらが優先して実行されるかを判定。抱きつきは女同士限定
	IF (TALENT:MASTER:性別 & 1) && (TALENT:性別 & 1)
		抱きつき値 = 抱きつき判定(TARGET)
	ELSE
		抱きつき値 = 0
	ENDIF
	被逆推値 = ENDURE(TARGET)

	抱きつき優先 = (抱きつき値 >= 1 && 抱きつき値 > 被逆推値 + 40 && !(被逆推値 >= 600 && BASE:理性 <= 300))

	;抱きつきが優先の場合
	IF 抱きつき優先
		IF !CFLAG:诶嘿嘿 && TFLAG:102 != 3 && 抱きつき値 >= RAND:250 + 250 && TCVAR:抱きつき禁止時間 <= 0
			;室外では抱きつかれない
			IF (!人の气息 && INROOM(CFLAG:MASTER:現在位置) && AT_HOME(MASTER)) || CFLAG:MASTER:現在位置 == OMANEKIBEYA()
				;同室にいるのが1人のみの場合(抱きつきは複数人不可)
				IF GET_TARGETNUM() == 1
					PRINTL
					PRINTFORMW %CALLNAME:MASTER%は%CALLNAME%に抱きつかれた！
					CALL KOJO_MESSAGE_SEND("EVENT",10,TARGET,1,1)
					TFLAG:抱きつき解放ポイント = 2 + RAND:(MIN(ABL:欲望, 10) / 2 + 2) + MIN(CFLAG:积攒度, 1000) / 200
					CFLAG:诶嘿嘿 = 2
					CFLAG:MASTER:诶嘿嘿 = 2
					TFLAG:102 = 3
					TFLAG:抱住模式 = 1
				ENDIF
			ENDIF
		ENDIF
	;押し倒されが優先の場合
	ELSE
		IF ((!CFLAG:诶嘿嘿 && TFLAG:102 != 3) || (TFLAG:102 == 3 && TFLAG:抱住模式)) && 被逆推値 >= RAND:300 + 300
			;室外では押し倒されない
			IF (!人の气息 && INROOM(CFLAG:MASTER:現在位置) && AT_HOME(MASTER)) || CFLAG:MASTER:現在位置 == OMANEKIBEYA()
				;同室にいるのが1人のみの場合または複数人に押し倒されたとき
				IF GET_TARGETNUM() == 1 || 複数被逆推() == 1
					;押し倒されない効果
					IF FLAG:推倒 && 被逆推判定 <= 0
						PRINTL
						PRINTFORML 突然%CALLNAME:TARGET%に抱きつかれた！
						PRINTFORM %CALLNAME:TARGET%は
						IF PALAM:TARGET:欲情 >= PALAMLV:10
							PRINT ギラついた
						ELSE
							PRINT 潤んだ
						ENDIF
						PRINTFORML 瞳で見つめてきた
					;ディレイ中は襲い掛かってこない
					ELSEIF CFLAG:TARGET:延迟 > 0

					ELSE
						PRINTL
						PRINTFORMW %CALLNAME:MASTER%は被逆推た！
						;CALL KOJO_EVENT(12, TARGET)
						CALL KOJO_MESSAGE_SEND("EVENT",10,TARGET,1,0)
						FOR LOCAL, 1, GET_TARGETNUM() + 1
							CFLAG:(TARGET:LOCAL):诶嘿嘿 = 2
						NEXT
						CFLAG:MASTER:诶嘿嘿 = 2
						TFLAG:102 = 3
						TFLAG:抱住模式 = 0
						TFLAG:被逆推開始時間 = TIME + DAY * 1440
					ENDIF
				ENDIF
				IF INROOM(CFLAG:MASTER:現在位置) == 2
					CALL DATUI_SHOES(MASTER,0)
					CALL DATUI_SHOES(TARGET,0)
				ENDIF
			;室外(連れ込み宿とラブホ除く)で押し倒され条件を満たした場合
			ELSEIF CFLAG:MASTER:現在位置 != 260 && CFLAG:MASTER:現在位置 != 950
				PRINTL
				SELECTCASE CFLAG:TARGET:积攒度
					CASE IS < 600
						PRINTFORML %CALLNAME:TARGET%が袖を引いてきた
						PRINTFORMW どこか人目につかない場所へ行きたいようだ
					CASE IS < 800
						PRINTFORMW %CALLNAME:TARGET%は%CALLNAME:MASTER%に寄り添い、上目遣いで見つめてきた…
					CASE IS < 1000
						PRINTFORML %CALLNAME:TARGET%が%CALLNAME:MASTER%に寄り添い、\@ BATHROOM(CFLAG:現在位置) ? 剥き出しの # 服の上から \@股間をそっと撫でてきた…
						PRINTFORMW %CALLNAME:TARGET%は欲情を視線で訴えかけている
						IF TCVAR:TARGET:誘惑時刻 != TIME
							PALAM:TARGET:潤滑 += 500
							TCVAR:TARGET:誘惑時刻 = TIME
						ENDIF
					CASEELSE
						PRINTFORML %CALLNAME:TARGET%は上気した顔で%CALLNAME:MASTER%にしなだれかかり、%CALLNAME:MASTER%の手を取って自分のぐっしょりと湿った秘部に導いた…
						PRINTFORMW %CALLNAME:TARGET%は今すぐにでも%CALLNAME:MASTER%に抱かれたくて堪らない様だ
						IF TCVAR:TARGET:誘惑時刻 != TIME
							PALAM:TARGET:潤滑 += 2000
							TCVAR:TARGET:誘惑時刻 = TIME
						ENDIF
				ENDSELECT
			ENDIF
		ENDIF
	ENDIF
ENDIF


;複数押し倒されの判定
@複数被逆推()
#FUNCTION
#DIM 判定値
#DIM キャラ別判定値
#DIM 相性補正
#DIM NUM_TARGET
判定値 = 0
NUM_TARGET = GET_TARGETNUM()
SIF NUM_TARGET <= 1
	RETURNF 0
FOR LOCAL, 1, NUM_TARGET + 1
	SIF CFLAG:(TARGET:LOCAL):同室 != 1
		CONTINUE
	SIF ENDURE(TARGET:LOCAL) < 450
		RETURNF 0
	;判定を通ったらキャラ別判定値に入れる
	キャラ別判定値 = ENDURE(TARGET:LOCAL)
	DEBUGPRINTFORML 補正前：({TARGET:LOCAL}) {ENDURE(TARGET:LOCAL)}
	;ここからキャラ別判定値を補正していく
	;レズっ気での補正(3未満にはペナルティ)
	SIF ABL:(TARGET:LOCAL):百合属性 == 0
		TIMES キャラ別判定値, 0
	SIF ABL:(TARGET:LOCAL):百合属性 == 1
		TIMES キャラ別判定値, 0.50
	SIF ABL:(TARGET:LOCAL):百合属性 == 2
		TIMES キャラ別判定値, 0.80
	;3以上では(1+0.1*(レズっ気 - 3))倍
	SIF ABL:(TARGET:LOCAL):百合属性 >= 3
		キャラ別判定値 = キャラ別判定値 * (100 + 10 * (ABL:(TARGET:LOCAL):百合属性 - 3)) / 100
	DEBUGPRINTFORML 百合属性補正後：({TARGET:LOCAL}) {キャラ別判定値}
	;レズ中毒での補正 (1+0.1*レズ中毒)倍
	キャラ別判定値 = キャラ別判定値 * (100 + 10 * ABL:(TARGET:LOCAL):百合中毒) / 100
	DEBUGPRINTFORML 百合中毒補正後：({TARGET:LOCAL}) {キャラ別判定値}
	
	;相性での補正
	;仲のいいキャラがいると一緒にMASTERを押し倒しやすく(完全に趣味)
	相性補正 = 0
	;同室のキャラを探り各キャラに対して相性値を見ていく
	FOR LOCAL:1, 1, NUM_TARGET + 1
		SIF CFLAG:(TARGET:(LOCAL:1)):同室 != 1
			CONTINUE
		SIF LOCAL == LOCAL:1
			CONTINUE
		;相性補正 += RELATION:LOCAL:(LOCAL:2)
		;ほんとは上の一文だけで済ませたいんだけど......
		;_Replace.csvのRELATIONの初期値が働かない(泣)
		;なので苦肉の策として0は100とみなす(暴論)
		相性補正 += RELATION:(TARGET:LOCAL):(TARGET:(LOCAL:1))
		SIF RELATION:(TARGET:LOCAL):(TARGET:(LOCAL:1)) == 0
			相性補正 += 100
	NEXT
	;平均値をとる(小数点以下切捨て) 当人を除いた(GET_TARGETNUM() - 1)人で割る
	;0除算注意(無いと思うけど)
	相性補正 /= NUM_TARGET - 1
	キャラ別判定値 = キャラ別判定値 * 相性補正 / 100
	DEBUGPRINTFORML 相性補正後：({(TARGET:LOCAL)}) {キャラ別判定値}
	;補正後のキャラ別判定値を全体の判定値に入れる
	判定値 += キャラ別判定値
NEXT
;平均値をとる(小数点以下切捨て)
;0除算がこわいぃ
判定値 /= NUM_TARGET
DEBUGPRINTFORML 判定値：{判定値}
;判定値が最大だとして、確率は「(400+200*同室の人数)分の150」に設定(人数増えると難易度上昇)
SIF RAND:(400 + 200 * NUM_TARGET) + 450 <= 判定値
	RETURNF 1
RETURNF 0


