			GOTO LOOP
		ENDIF
		拠点_大家 = RESULT
		默认的初始位置 = CFLAG:RESULT:大家候補
		ROOMDATA:(默认的初始位置 % 100) |= 場所_被窝
		PRINTFORMW %STR:(CFLAG:RESULT:大家候補 + (MAIN_MAP ? 8000 # 0) )%へ引っ越します
	ELSEIF !RESULT
		$SONOMAMA
		TRYCCALLFORM DEFAULT_OWNER_{MAIN_MAP}
		CATCH
			PRINTFORMW 部屋情報の設定に失敗しました
		ENDCATCH
			IF MAIN_MAP == 0
				LOCALS = %STR:(默认的初始位置)%
			ELSE
				LOCALS = %STR:(默认的初始位置 + 8000)%
			ENDIF
			PRINTFORMW %LOCALS%へ引っ越します
	ELSE
		GOTO LOOP
	ENDIF

