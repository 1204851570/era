		ENDIF
	ELSE
		PRIVATEROOM:(CFLAG:LOCAL:初始位置 % 100) = 0
		CFLAG:LOCAL:初始位置 = SUKIMA()
		CFLAG:LOCAL:神社在住 = 0
	ENDIF
	CFLAG:LOCAL:現在位置 = CFLAG:LOCAL:初始位置
	CFLAG:LOCAL:约会中 = MAIN_MAP
NEXT
PRINTFORMW %GET_MAPNAME(ARG)%に設定しました
CALL ROOMSETTING
CFLAG:MASTER:初始位置 = 默认的初始位置
CFLAG:MASTER:現在位置 = CFLAG:MASTER:初始位置

@ROOMSETTING
LOCAL:1 = 0
TRYCCALLFORM ROOMSETTING_{MAIN_MAP}
	PRINTFORMW %GET_MAPNAME(MAIN_MAP)%的房間情報を設定しました
CATCH
	PRINTFORMW 部屋情報の設定に失敗しました
ENDCATCH
FOR LOCAL,1,CHARANUM
	IF MAP_住人(MAIN_MAP,LOCAL) && !CFLAG:LOCAL:出禁
		;PRIVATEROOM変数に、そこの家主の番号を保存
		PRIVATEROOM:(CFLAG:LOCAL:初始位置 % 100) = LOCAL 
	 	SIF CFLAG:LOCAL:大家候補
			LOCAL:1 ++
	ENDIF
NEXT
IF !默认的初始位置 || 默认的初始位置 / 100 != MAIN_MAP
	SIF !LOCAL:1
		GOTO SONOMAMA
	
	PRINTFORMW このMapには私室候補が複数あります。
	SIF DAY <= 1
		PRINTFORMW 初日限定で、必要信頼度にかかわらず部屋を選択できます。
	PRINTFORML 
	FOR LOCAL,1,CHARANUM
		IF MAP_住人(MAIN_MAP,LOCAL) && CFLAG:LOCAL:大家候補
			LOCAL:1 ++
			SIF CFLAG:LOCAL:居住必要信頼度 > CFLAG:LOCAL:信頼度 && DAY > 1
				SETCOLOR C_L_GRAY
			IF MAIN_MAP == 0
				LOCALS = %STR:(CFLAG:LOCAL:大家候補)%
			ELSE
				LOCALS = %STR:(CFLAG:LOCAL:大家候補 + 8000)%
			ENDIF
			PRINTFORML [{LOCAL}] - %LOCALS%　大家:%CALLNAME:LOCAL% 必要信頼度:{CFLAG:LOCAL:居住必要信頼度}
			RESETCOLOR
		ENDIF
	NEXT
	
	PRINTFORML [0] - そのまま
	$LOOP
	INPUT
	IF MAP_住人(MAIN_MAP,RESULT) && CFLAG:RESULT:大家候補
		IF CFLAG:RESULT:居住必要信頼度 > CFLAG:RESULT:信頼度 && DAY > 1
