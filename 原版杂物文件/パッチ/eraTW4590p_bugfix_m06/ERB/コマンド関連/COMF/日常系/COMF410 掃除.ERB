FOR LOCAL,1,11
	CFLAG:LOCAL:現在位置 = 9
	CFLAG:LOCAL:335 = 1 + RAND:(ABL:MASTER:話術技能)
NEXT
FLAG:562 = 1
TIME += (500 - ARG * 100)
DOWNBASE:MASTER:体力 = (1500 - ARG * 300)
DOWNBASE:MASTER:気力 = (1500 - ARG * 100)
BASE:MASTER:TSP = 0
SIF ARG
	EXP:MASTER:清掃経験 += (1 + RAND: (ARG * 3))
SIF !ARG
	EXP:MASTER:清掃経験 += (1 + RAND: (2))
EXP:MASTER:異常清掃経験 += RAND:5
