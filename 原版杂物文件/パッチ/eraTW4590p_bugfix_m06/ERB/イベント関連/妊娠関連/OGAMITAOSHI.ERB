	CALL COLORMESSAGE(@"%CALLNAME:ARG%は、生での性交に倒錯的な魅力を感じている……",C_PINK,1,1)
	理性判定値 = 理性判定値 * 9 / 10
	CALL SHOW_REASONWALL(理性判定値)
ENDIF
IF TALENT:ARG:難以越過的底線
	SELECTCASE EXP:ARG:愛情経験
		CASE IS >= 500
			CALL COLORMESSAGE(@"%CALLNAME:ARG%は、%CALLNAME:MASTER%にはもう何もかも許してしまいたい……！",C_PINK,1,1)
			理性判定値 = 理性判定値 / 2
		CASE IS >= 300
			CALL COLORMESSAGE(@"%CALLNAME:ARG%は、%CALLNAME:MASTER%相手といえどまだわずかに抵抗があるようだ……",C_PINK,1,1)
			理性判定値 = 理性判定値 * 6 / 5
		CASE IS >= 100
			CALL COLORMESSAGE(@"%CALLNAME:ARG%は、親しい相手でもある程度の距離はとっておきたい……",C_PINK,1,1)
			理性判定値 = 理性判定値 * 3 / 2
		CASEELSE
			CALL COLORMESSAGE(@"%CALLNAME:ARG%は、他者をそこまで受け入れたいとは望んでいない……",C_PINK,1,1)
			理性判定値 *= 2
	ENDSELECT
	CALL SHOW_REASONWALL(理性判定値)
ENDIF
IF TALENT:ARG:傲嬌
	IF TALENT:ARG:恋慕
		理性判定値 = 理性判定値 * 2 / 3
		CALL COLORMESSAGE(@"%CALLNAME:ARG%はデレた！",C_PINK,1,1)
	ELSE
		理性判定値 = 理性判定値 * 3 / 2
		CALL COLORMESSAGE(@"%CALLNAME:ARG%は反感を抱いた……",C_PINK,1,1)
	ENDIF
	CALL SHOW_REASONWALL(理性判定値)
ENDIF
WAIT
IF CHK_HININ_LOVE(ARG) > 理性判定値
	IF ESTRUS_CYCLE(ARG) != 150
		PRINTFORMW %CALLNAME:MASTER%の恥も外聞もない懇願に、%CALLNAME:ARG%もとうとう折れてくれた
		CFLAG:ARG:允许无套 = 1
		CALL KOJO_MESSAGE_SEND("EVENT",18,TARGET,4,0)
		PRINTW 危険日以外では避妊なしでセックスしていいことになった！
	ELSE
		PRINTFORMW %CALLNAME:ARG%の兒童が欲しい、と伝えると、%CALLNAME:ARG%は顔を赤らめて頷いた
		CFLAG:ARG:允许无套 = 2
		CALL KOJO_MESSAGE_SEND("EVENT",18,TARGET,5,0)
		PRINTFORMW %CALLNAME:ARG%から子作りの合意を得た！
	ENDIF
ELSE
	PRINTFORML	%CALLNAME:ARG%委婉地拒绝了
	CALL KOJO_MESSAGE_SEND("EVENT",18,TARGET,2,0)
	PRINTL [0]相手の意志を尊重する
	PRINTL [1]もうひと押し
	$INPUT2_LOOP
	INPUT
	IF RESULT == 0
		TFLAG:16 =2
		TFLAG:17 = TARGET
	ELSEIF RESULT == 1
	;口のうまさと相手次第では粘ればどうにかなる
		LOCAL = (4 - TALENT:ARG:応答 - TALENT:ARG:胆量 - TALENT:ARG:態度) * (ABL:MASTER:話術技能 + 3 * CFLAG:ARG:指出缺点)
		LOCAL:2 = 理性判定値 * (100 - LOCAL) / 100
		CALL SHOW_REASONWALL(LOCAL:2)
		IF CHK_HININ_LOVE(ARG) > LOCAL:2
			PRINTFORMW %CALLNAME:MASTER%は舌先三寸でどうにか%CALLNAME:ARG%を丸め込んだ
			IF ESTRUS_CYCLE(ARG) != 150
				CFLAG:ARG:允许无套 = 1
				CALL KOJO_MESSAGE_SEND("EVENT",18,TARGET,4,0)
				PRINTW 危険日以外では避妊なしでセックスしていいことになった！
			ELSE
				CFLAG:ARG:允许无套 = 2
				CALL KOJO_MESSAGE_SEND("EVENT",18,TARGET,5,0)
				PRINTFORMW %CALLNAME:ARG%から子作りの合意を得た！
			ENDIF
		ELSE
			CALL KOJO_MESSAGE_SEND("EVENT",18,TARGET,3,0)
			PRINTFORMW %CALLNAME:ARG%に思いっきり怒られた…
			CFLAG:ARG:指出缺点 += 1
			CALL ENDUFUFU(ARG)
			CALL GET_ANGRY(ARG)
			MARK:ARG:反発刻印 = MIN(MARK:ARG:反発刻印 + 1, 3)
			TFLAG:106 = 0
			TFLAG:16 = 2
		ENDIF
	ELSE
		GOTO INPUT2_LOOP
	ENDIF
ENDIF

