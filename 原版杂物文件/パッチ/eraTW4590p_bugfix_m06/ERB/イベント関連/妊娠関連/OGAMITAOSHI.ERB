@CHK_HININ_LOVE(ARG)
#FUNCTION
LOCAL = 0
SIF TALENT:ARG:恋人
	LOCAL += 300
;愛情経験

LOCAL += EXP:ARG:愛情経験 / 2

;好感度
SELECTCASE CFLAG:ARG:好感度
CASE 0 TO 499
	LOCAL -= 100
CASE 500 TO 999
	LOCAL += 30
CASE 1000 TO 2999
	LOCAL += 50
CASEELSE
	LOCAL += CFLAG:ARG:好感度 / 30
ENDSELECT

LOCAL += ABL:ARG:親密 * 20
LOCAL += ABL:ARG:従順 * 7
LOCAL += ABL:ARG:奉仕精神 * 7

RETURNF LOCAL

@CHK_HININ_REASON(ARG,ARGS)
#FUNCTION
#DIM 理性判定値
VARSET LOCAL

LOCAL:3 += GETPALAMLV(PALAM:欲情,15) * (10 + TALENT:ARG:快感応答 * 3)
LOCAL:3 += GETPALAMLV(PALAM:恭順,15) * (10 - TALENT:ARG:態度 * 3)
LOCAL:3 += GETPALAMLV(PALAM:好意,15) * 10

LOCAL:5 += ABL:ARG:膣射中毒 * 15
LOCAL:5 += ABL:ARG:欲望 * (10 + TALENT:ARG:快感応答 * 2)
LOCAL:5 += MARK:ARG:快楽刻印 * 10
LOCAL:5 += MARK:ARG:不埒刻印 * 10
LOCAL:5 += MARK:ARG:苦痛刻印 * 10
LOCAL:5 -= MARK:ARG:反発刻印 * 100


理性判定値 = 800 - LOCAL:3 * LOCAL:5 / 300

SIF ESTRUS_CYCLE(ARG) == 150
	理性判定値 += 1000

IF TCVAR:ARG:発情
	理性判定値 -= 200
ELSEIF TCVAR:ARG:媚薬 || TCVAR:ARG:催情薬
	理性判定値 -= 50
ENDIF

IF TALENT:ARG:傲嬌
	IF TALENT:ARG:恋慕
		理性判定値 = 理性判定値 * 2 / 3
	ELSE
		理性判定値 = 理性判定値 * 3 / 2
	ENDIF
ENDIF

;信頼度
IF CFLAG:ARG:信頼度 < 100
	理性判定値 *= 5
ELSEIF CFLAG:ARG:信頼度 < 300
	理性判定値 *= 5 / 2
ELSEIF CFLAG:ARG:信頼度 < 500
	理性判定値 *= 5 / 3
ELSEIF CFLAG:ARG:信頼度 < 1000
	理性判定値 *= 5 / 4
ENDIF

;カウンターだとここで素質処理しておく
IF ARGS == "COUNTER"
	SIF TALENT:ARG:抵抗
		理性判定値 += 300
	IF TALENT:ARG:自尊心 == -1
		理性判定値  = 理性判定値 * 9 / 10
	ELSEIF TALENT:ARG:自尊心 == 1
		理性判定値 = 理性判定値 * 6 / 5
	ENDIF
	SIF OTOKOGIRAI(ARG)
		理性判定値 = 理性判定値 * 3 / 2
	SIF TALENT:ARG:貞操 == 1
		理性判定値 = 理性判定値 * 6 / 5
	SIF TALENT:MASTER:謎之魅力
		理性判定値 = 理性判定値 * 9 / 10
	SIF TALENT:ARG:倒錯的
		理性判定値 = 理性判定値 * 9 / 10
	IF TALENT:ARG:難以越過的底線
		SELECTCASE EXP:ARG:愛情経験
			CASE IS >= 500
				理性判定値 = 理性判定値 / 2
			CASE IS >= 300
				理性判定値 = 理性判定値 * 4 / 3
			CASE IS >= 100
				理性判定値 = 理性判定値 * 3 / 2
			CASEELSE
				理性判定値 *= 2
		ENDSELECT
	ENDIF
	IF TALENT:ARG:傲嬌
		IF TALENT:ARG:恋慕
			理性判定値 = 理性判定値 * 2 / 3
		ELSE
			理性判定値 = 理性判定値 * 3 / 2
		ENDIF
	ENDIF
ENDIF


理性判定値 = MAX(理性判定値,0)
RETURNF 理性判定値

